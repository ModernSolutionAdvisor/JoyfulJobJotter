{
    "manifest_version": 3, 
    "name": "Joyful Job Jotter",
    "version": "1.0.0",
    "description": "A Chrome Extension to record and manage job applications.",
  
    "permissions": [
      "storage", 
      "activeTab",
      "scripting" 
    ],
  
    "background": {
      "service_worker": "background.js" 
    },
  

    "content_scripts": [
      {
        "matches": ["<all_urls>"], 
        "js": ["content.js"], 
        "css": ["content.css"] 
      }
    ],
  
    "action": {
      "default_popup": "popup/index.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "192": "icons/icon192.png"
      }
    },
  
    "options_page": "options/index.html", 
  
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "192": "icons/icon192.png"
    }
  

  }